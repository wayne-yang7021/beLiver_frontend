{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "typeRoots": ["./_types_", "./node_modules/@types"],
    "jsx": "react-jsx",
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": ["jest"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  // "exclude": ["node_modules/react-native-reanimated"]

}